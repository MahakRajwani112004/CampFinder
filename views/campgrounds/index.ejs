
<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add Campground</a>
    </div>

        <% for(let campfinder of campfinders) {%>
                     <div class="card">
                        <div class="row">
                            <div class="col-md-4">
                                <img class="img-fluid" alt="" src="<%= campfinder.image %>">
                            </div>
<div class="col-md-8">
    <div class="card-body">
              <h5 class="card-title">
                <%= campfinder.title %>
              </h5>
              <p class="card text"><%= campfinder.description %></p>
              <p >
           <small  style="color:grey"> <%= campfinder.location %></small>
            </p>
            <a class="btn btn-primary" href="/campgrounds/<%= campfinder._id %>">View <%= campfinder.title %></a>
    </div>
</div>


                        </div>
                     </div>
            <% } %>

