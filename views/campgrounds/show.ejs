<% layout('layouts/boilerplate') %>
         <div class="row" >
            <div class="col-6 offset-4
            ">
                <div class="card mb-3" style="width: 32rem;">
                    <img src="<%= campfinder.image %>"class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%= campfinder.title %></h5>
                      <p class="card-text"><%= campfinder.description %></p>
                    </div>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item"><%= campfinder.location %></li>
                      <li class="list-group-item">$<%= campfinder.price %>/night</li>
                 
                    </ul>
                    <div class="card-body">
                      <a  class="card-link btn btn-warning"   href="/campgrounds/<%= campfinder._id %>/edit">Edit Campground</a>
                      <form  class="d-inline"  action="/campgrounds/<%= campfinder._id %>?_method=DELETE"  method="post">
                        <button  class="btn btn-danger">Delete</button></form>
                      <p><a  class="card-link"    href="/campgrounds">ALL campgrounds</a></p>
                    </div>
                    <div class="card-footer ">
                          2 days ago
                    </div>
                  </div>
            </div>
         </div>
    
